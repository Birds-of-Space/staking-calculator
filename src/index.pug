script.
  const principalInput = document.getElementById("principal");
  const apyInput = document.getElementById("apy");
  const startDateInput = document.getElementById("start-date");
  const endDateInput = document.getElementById("end-date");
  const resultsDiv = document.getElementById("results");
  function calculateEarnings() {
  const principal = parseFloat(principalInput.value);
  const apy = parseFloat(apyInput.value);
  const startDate = new Date(startDateInput.value).getTime() / 1000; // Convert to Unix timestamp
  const endDate = new Date(endDateInput.value).getTime() / 1000;
  const results = calculateStakingEarnings(principal, apy, startDate, endDate);
  // Clear any previous results
  resultsDiv.innerHTML = "";
  // Display results in a user-friendly format
  resultsDiv.innerHTML += `
  <h4 class="text-lg font-semibold mb-2">Results:</h4>
  <ul class="list-disc pl-6">
  <li>Staked amount: ${results.principal}</li>
  <li>APY: ${results.apy}%</li>
  <li>Start date: ${new Date(results.startTimeStamp * 1000)}</li>
  <li>End date: ${new Date(results.stopTimeStamp * 1000)}</li>
  <li>Time difference in days: ${results.timeDiffInDays}</li>
  <li>Interest earned: ${results.interestEarned.toFixed(18)}</li>
  <li>Total earnings: ${results.totalEarnings.toFixed(18)}</li>
  </ul>
  `;
  }
  function calculateStakingEarnings(principal, apy, startTimeStamp, stopTimeStamp) {
  const timeDiffInSeconds = stopTimeStamp - startTimeStamp;
  const timeDiffInDays = timeDiffInSeconds / (60 * 60 * 24);
  const dailyRate = Math.pow(1 + (apy / 100), 1 / 365) - 1;
  const interestEarned = principal * dailyRate * timeDiffInDays;
  const totalEarnings = principal + interestEarned;
  return {
  principal: principal,
  apy: apy,
  startTimeStamp: startTimeStamp,
  stopTimeStamp: stopTimeStamp,
  timeDiffInSeconds: timeDiffInSeconds,
  timeDiffInDays: timeDiffInDays,
  interestEarned: interestEarned,
  totalEarnings: totalEarnings,
  };
  }
